<div class="ai1ec-modal-header">
	<button type="button" class="ai1ec-close" data-dismiss="ai1ec-modal">Ã—</button>
	<h2>{{ 'Post Your Event' | __ }}</h2>
</div>

<div class="ai1ec-modal-body">
	{% if message_type != 'success' %}
		<div class="ai1ec-alert ai1ec-alert-{{ message_type }}">
			{{ message | raw }}
		</div>
	{% else %}
		{{ message | raw }}
	{% endif %}
</div>

<div class="ai1ec-modal-footer">
	<a href="#" class="ai1ec-btn ai1ec-btn-lg ai1ec-btn-primary ai1ec-pull-left ai1ec-post-another">
		<i class="ai1ec-fa ai1ec-fa-plus"></i>
		{{ 'Post Another' | __ }}
	</a>
	<a href="{{ link_url | e('html_attr') }}"
		class="ai1ec-btn ai1ec-btn-lg ai1ec-btn-primary">
		{{ link_text }}
		<i class="ai1ec-fa ai1ec-fa-arrow-right"></i>
	</a>
</div>
